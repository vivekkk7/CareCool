    <script>
        $('#threedot').click(function () {
            var sidebar = $(".sidebar");
            if (sidebar.css("left") === "0px") {
                sidebar.css("left", "-500px");
            } else {
                sidebar.css("left", "0px");
            }
        });
        $('.close_side').click(function () {
            $('.sidebar').css('left', '-500px');
        });
    </script>

